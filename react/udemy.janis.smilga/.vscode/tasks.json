{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start 01-books dev server",
      "type": "npm",
      "script": "dev",
      "path": "01-books/",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "(Local|ready in)"
        }
      }
    }
  ]
}